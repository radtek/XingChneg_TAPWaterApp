<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_user_no"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="用户编码：" />

        <TextView
            android:id="@+id/tv_yhbm"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="101007" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:text="户名：" />

        <TextView
            android:id="@+id/tv_xm"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="地税局" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="电话：" />

        <TextView
            android:id="@+id/tv_dh"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="43784378" />

        <TextView
            android:id="@+id/tv_user_address"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:text="地址：" />

        <TextView
            android:id="@+id/tv_dz"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="民生东路" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_user_lastmonth"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="上月止度：" />

        <TextView
            android:id="@+id/tv_syzd"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="10565" />

        <TextView
            android:id="@+id/tv_user_currmonth"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:text="本月止度：" />

        <TextView
            android:id="@+id/tv_byzd"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="0" />

        <TextView
            android:id="@+id/tv_user_water"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:text="水量：" />

        <TextView
            android:id="@+id/tv_sl"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="0" />
    </LinearLayout>

</LinearLayout>