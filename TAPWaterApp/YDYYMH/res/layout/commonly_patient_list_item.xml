<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/commonly_patient_list_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/d_b3"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/commonly_patient_list_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/d_b3"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/commonly_patient_list_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="@color/d_b3"
            android:textSize="18sp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/commonly_patient_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="哈哈"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_commoncontact__bg"
            android:gravity="center"
            android:text=" 删  除 "
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>