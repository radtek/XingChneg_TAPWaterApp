<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/report_br_info_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/tv_rq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_report"
            android:drawableRight="@drawable/reporylist_down"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:text="近一个月"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/tv_brxm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="姓名"/>

        <TextView
            android:id="@+id/tv_brxb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_brxm"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:text="性别" />
        <TextView
            android:id="@+id/tv_brnl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_brxb"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:text="年龄" />
    </RelativeLayout>

</RelativeLayout>