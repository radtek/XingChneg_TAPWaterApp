<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/topbj"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/tv_isread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/unread"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:text="未读"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/list_right_arrow" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/tv_sampName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报告单号"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_bgdh"
            android:layout_toRightOf="@id/tv_sampName"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报告单号"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bgrq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bgdh"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="日期" />
    </RelativeLayout>

</RelativeLayout>